{
  "overall_goal": "Master the fundamental concepts of heat transfer, including conduction, convection, and radiation, and apply them to solve practical problems using key formulas and analytical techniques.",
  "core_concepts": [
    {
      "name": "Heat Conduction",
      "explanation": "Transfer of heat through a solid or stationary fluid due to temperature differences.",
      "importance": "high",
      "related_concepts": [
        "Fourier's Law",
        "Thermal Conductivity"
      ],
      "examples": [
        "Heat flow through a metal rod",
        "Insulation materials"
      ]
    },
    {
      "name": "Heat Convection",
      "explanation": "Heat transfer between a surface and a moving fluid, involving both conduction and fluid motion.",
      "importance": "high",
      "related_concepts": [
        "Newton's Law of Cooling",
        "Nusselt Number"
      ],
      "examples": [
        "Cooling of a hot plate by air",
        "Heat exchangers"
      ]
    },
    {
      "name": "Thermal Radiation",
      "explanation": "Heat transfer via electromagnetic waves, independent of a medium.",
      "importance": "high",
      "related_concepts": [
