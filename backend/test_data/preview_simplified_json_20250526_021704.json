  "key_formulas": [
    {
      "name": "Fourier's Law",
      "formula": "q = -k * A * (dT/dx)",
      "description": "Calculates heat flux in conduction",
      "application": "Heat loss through a wall"
    },
    {
      "name": "Newton's Law of Cooling",
      "formula": "q = h * A * (T_s - T_inf)",
      "description": "Calculates convective heat transfer",
      "application": "Cooling of electronic components"
    },
    {
      "name": "Stefan-Boltzmann Law",
      "formula": "E = \u03b5\u03c3T^4",
      "description": "Calculates radiant heat flux",
      "application": "Solar panel heating"
    },
    {
      "name": "Lumped Capacitance",
      "formula": "T(t) - T_inf = (T_i - T_inf) * exp(-t/\u03c4)",
      "description": "Simplified transient analysis",
      "application": "Quenching of metal parts"
    },
    {
      "name": "Log Mean Temperature Difference",
      "formula": "\u0394T_lm = (\u0394T1 - \u0394T2)/ln(\u0394T1/\u0394T2)",
      "description": "Effective temperature difference in heat exchangers",
      "application": "Shell-and-tube heat exchanger design"
    }
  ],
